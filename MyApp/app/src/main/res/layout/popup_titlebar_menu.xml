<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingRight="@dimen/titlebar_menu_padding_right"
    android:paddingTop="@dimen/titlebar_menu_padding_top">

    <ImageView
        android:id="@+id/read_pop_raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/titlebar_menu_read_pop_raw_padding_right"
        android:src="@drawable/read_pop_raw_up_selecter" />

    <LinearLayout
        android:id="@+id/ll_menu_container"
        android:layout_width="@dimen/titlebar_menu_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/titlebar_menu_d9_edge"
        android:background="@drawable/read_pop_bg01"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" />

</LinearLayout>