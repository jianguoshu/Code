<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".demo.anr.ANRActivity">

    <TextView
        android:id="@+id/tv_btn_start_monitor"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="#669966"
        android:gravity="center"
        android:text="start-monitor" />

    <TextView
        android:id="@+id/tv_btn_update_file"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="#66aa66"
        android:gravity="center"
        android:text="update_file" />

    <TextView
        android:id="@+id/tv_btn_stop_monitor"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="#66aa66"
        android:gravity="center"
        android:text="stop-monitor" />

    <TextView
        android:id="@+id/tv_btn_create_anr"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="#66bb66"
        android:gravity="center"
        android:text="create-a-anr" />
</LinearLayout>